<h1>Follower Users</h1>
<div class = "container" >
	<div class = "row" >
		<% @user.followers.each do |user| %>
			<table class="table">
			<tr>
			  <td col-xs-3>  <%= user.name %> </td>
			  <td>フォロー数：<%= user.followings.count %></td>
			  <td>フォロワー数：<%= user.followers.count %></td>
			  <td col-xs-3><%= link_to '詳細', user_path(user) %></td>
			</tr>

			</table>
		<% end %>
	</div>
</div>