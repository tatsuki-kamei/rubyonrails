<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render 'root/side',user: @user,book: @book %>
		</div>
		<div class="col-xs-9">
			<h1>Book detail</h1>
			<table>
				<tbody>
					<tr>
						<td><%= link_to user_path(@post.user) do %>
							<%= attachment_image_tag @post.user, :profile_image,ã€€format: 'jpeg', fallback: "no_image.jpg", size: "100x100" %><br>
							<%= @post.user.name %>
							<% end %>
						</td>
						<td><%= link_to @post.title,book_path(@post) %></td>
						<td><%= @post.body %></td>
						<% if @user == current_user %>
							<td><%= link_to "Edit",edit_book_path(@post),class:"btn btn-success" %></td>
							<td><%= link_to "Destroy", book_path(@post),method: :delete, "data-confirm" =>"Are you sure?",class:"btn btn-danger" %>
							</td>
						<% end %>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>