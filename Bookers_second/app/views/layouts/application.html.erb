<!DOCTYPE html>
<html>
  <head>
    <title>BookersSecond</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse" >
        <!-- /header -->
        <div class ="">
          <nav class="nav navbar-nav navbar-left">
               <h2><span class="glyphicon glyphicon-book" aria-hidden="true"></span>Bookers</h2>
          </nav>
          <nav>
            <ul class="nav navbar-nav navbar-right" >
              <% if user_signed_in? %>

                 <li class="">
                  <%= link_to 'Home',user_path(current_user.id), class: "glyphicon glyphicon-home" %>
                 </li>

                 <li class="user-matome">
                  <%= link_to 'Users', users_path, class: "glyphicon glyphicon-user" %>
                 </li>

                 <li class="">
                  <%= link_to 'Books', books_path, class: "glyphicon glyphicon-book" %>
                 </li>

                 <li class="">
                  <%= link_to "logout", destroy_user_session_path, method: :delete,class: "glyphicon glyphicon-log-out" %>
                 </li>

              <% else %>
                 <li class="">
                  <%= link_to ' Home', "/", class: "glyphicon glyphicon-home" %>
                 </li>
                 <li class="">
                  <%= link_to ' About', home_about_path ,class: "glyphicon glyphicon-link" %>
                 </li>
                 <li class="">
                  <%= link_to " sign up", new_user_registration_path, class: "glyphicon glyphicon-edit" %>
                 </li>
                 <li class="">
                  <%= link_to " login", new_user_session_path,class: "glyphicon glyphicon-login" %>
                 </li>
              <% end %>
            </ul>
          </nav>
        </div>
    </header>
    <div>
      <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
